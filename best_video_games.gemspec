  spec.name          = "best_video_games"
  spec.version       = BestVideoGames::VERSION
  spec.authors       = ["Perla Yates"]
  spec.email         = ["pianistps@yahoo.com"]

  spec.summary       = %q{A gem that gives the best video games}
